<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schedule.ReportController">
    <children>
        <Label text="Reports"/>

        <VBox alignment="CENTER" spacing="5.0">
            <children>
                <Button text="Generate Report 1" onAction="#generateReport1"/>
                <TextArea fx:id="reportArea1" editable="false" prefHeight="200.0" prefWidth="600.0"/>
            </children>
        </VBox>

        <VBox alignment="CENTER" spacing="5.0">
            <children>
                <Button text="Generate Report 2" onAction="#generateReport2"/>
                <TextArea fx:id="reportArea2" editable="false" prefHeight="200.0" prefWidth="600.0"/>
            </children>
        </VBox>

        <Button text="Back to Home" onAction="#backToHome"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
