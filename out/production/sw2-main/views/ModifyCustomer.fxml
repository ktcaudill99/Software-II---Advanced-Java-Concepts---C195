<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="510.0"  xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifyCustomerController">
    <Label layoutX="30" layoutY="30" text="Customer Name:" />
    <TextField fx:id="nameField" layoutX="161.0" layoutY="34.0" />

    <Label layoutX="30" layoutY="70" text="Address:" />
    <TextField fx:id="addressField" layoutX="161.0" layoutY="74.0" />

    <Label layoutX="30" layoutY="110" text="Postal Code:" />
    <TextField fx:id="postalCodeField" layoutX="161.0" layoutY="114.0" />

    <Label layoutX="30" layoutY="150" text="Phone Number:" />
    <TextField fx:id="phoneField" layoutX="161.0" layoutY="154.0" />

    <Label layoutX="30.0" layoutY="234.0" text="First-level Division:" />
    <ComboBox fx:id="divisionBox" layoutX="161.0" layoutY="230.0" />

    <Label layoutX="30.0" layoutY="192.0" text="Country:" />
    <ComboBox fx:id="countryBox" layoutX="161.0" layoutY="188.0" />

    <Button layoutX="161.0" layoutY="277.0" onAction="#updateCustomer" text="Update" />
    <Button layoutX="255.0" layoutY="277.0" onAction="#cancelUpdate" text="Cancel" />

</AnchorPane>
