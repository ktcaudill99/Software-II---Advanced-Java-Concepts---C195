<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schedule.AddAppointmentController">
    <Label text="Customer Name:" layoutX="30" layoutY="30" />
    <TextField fx:id="nameField" layoutX="150" layoutY="30" />

    <Label text="Address:" layoutX="30" layoutY="70" />
    <TextField fx:id="addressField" layoutX="150" layoutY="70" />

    <Label text="Postal Code:" layoutX="30" layoutY="110" />
    <TextField fx:id="postalCodeField" layoutX="150" layoutY="110" />

    <Label text="Phone Number:" layoutX="30" layoutY="150" />
    <TextField fx:id="phoneField" layoutX="150" layoutY="150" />

    <Label text="First-level Division:" layoutX="30" layoutY="190" />
    <ComboBox fx:id="divisionBox" layoutX="150" layoutY="190" />

    <Label text="Country:" layoutX="30" layoutY="230" />
    <ComboBox fx:id="countryBox" layoutX="150" layoutY="230" />

    <Button text="Save" layoutX="150" layoutY="270" onAction="#saveAppointment" />

</AnchorPane>
