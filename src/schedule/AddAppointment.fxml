<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="420.0" prefWidth="510.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schedule.AddAppointmentController">
        <VBox prefHeight="604.0" prefWidth="726.0">
                <TextField fx:id="titleField" promptText="Title" />
                <TextArea fx:id="descriptionField" promptText="Description" />
                <TextField fx:id="locationField" promptText="Location" />
                <ComboBox fx:id="contactBox" promptText="Contact" />
                <TextField fx:id="typeField" promptText="Type" />
                <DatePicker fx:id="startDatePicker" promptText="Start Date" />
                <ComboBox fx:id="startTimeBox" promptText="Start Time" />
                <DatePicker fx:id="endDatePicker" promptText="End Date" />
                <ComboBox fx:id="endTimeBox" promptText="End Time" />
                <ComboBox fx:id="customerBox" promptText="Customer" />  <!-- New ComboBox for customers -->
                <TextField fx:id="userIdField" promptText="User ID" />
                <Text fx:id="actionStatus" />
                <Button fx:id="saveButton" onAction="#handleSaveButtonAction" text="Save" />
                <Button layoutX="255.0" layoutY="277.0" onAction="#cancelCreation" text="Cancel" />
        </VBox>
</AnchorPane>
